<view class='flex-col' style='height:100%'>
  <view class='cu-custom' style="height:{{CustomBar}}px;">
    <view class="cu-bar fixed bg-orange " style="height:{{CustomBar}}px;padding-top:{{StatusBar}}px;">
      <view class='pageMenu' bindtap='uploadPic'>
        <text class='icon-picfill'></text>
      </view>
      <view class='content'>留住好时光</view>
    </view>
  </view>

  <view class='flex-1' style='text-align:center;background:#f5f5f5;padding:20rpx;box-sizing:border-box;'>
    <image
      style="width: 100%; height: 100%;"
      mode="aspectFit"
      src="{{shareImg}}"
    ></image>
  </view>

  <view class='margin'>
    <button bindtap='saveAlbum2Local' class='button bg-gradual-orange'><text class="icon-magic"></text> 保存到相册</button>
  </view>

</view>
<!-- 离屏canvas -->
<canvas canvas-id="myCanvas" class="share__canvas"></canvas>


<!-- 登录 -->
<login bindlogin="loginHandle"></login>
