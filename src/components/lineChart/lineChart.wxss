/* flex栅格 */
.flex-col {overflow: hidden;display: flex; flex-direction: column;}
.flex-row {overflow: hidden; display: flex; }
.flex-1 { flex: 1;}
.align-stretch { align-items: stretch;}
.align-center { align-items: center;}
.justify-center {justify-content: center;}
.flex-wrap { flex-wrap: wrap;}
/* components/lineChart/lineChart.wxss */
.linewrap{ height: 100%;}
.linewrap ._canvas{width: 750rpx; height:750rpx; }

.linewrap ._cont{padding: 10rpx;}

/* 刻度 */
.textmarks{position: relative; height: 40rpx;line-height: 40rpx;}
.textmarks text{position: absolute;left:.7em;text-align: right;}
.textmarks ._m1{width: 10%;}
.textmarks ._m2{width: 15%;}
.textmarks ._m3{width: 25%;}
.textmarks ._m4{width: 50%;font-size:1.2em;left:1em;}
.textmarks ._m5{width: 75%;}
.textmarks ._m6{width: 85%;}
.textmarks ._m7{width: 90%;}
